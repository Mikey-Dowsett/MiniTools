<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniTools.Views.Maths.Random.CoinFlipView"
             Title="Coin Flip"
             BackgroundColor="{AppThemeBinding Light={StaticResource Light}, Dark={StaticResource Dark}}">
    
    <ContentPage.Content>
        <VerticalStackLayout VerticalOptions="Center" Margin="20">
            <ImageButton Source="{Binding CoinImage}" Clicked="FlipCoin" x:Name="Coin"
                         Command="{Binding FlipCoinCommand}"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>