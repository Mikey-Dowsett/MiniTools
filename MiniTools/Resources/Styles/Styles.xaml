<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material">
    
    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Smoke}, Dark={StaticResource Charcoal}}" />
    </Style>
    
    <Style TargetType="Frame" Class="Answer">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Smoke}, Dark={StaticResource Charcoal}}" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Charcoal}, Dark={StaticResource Smoke}}" />
        <Setter Property="CornerRadius" Value="10" />
    </Style>
    
    <Style TargetType="Label">
        <Setter Property="FontSize" Value="30" />
    </Style>
    
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Bronze}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Charcoal}, Dark={StaticResource Smoke}}" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>
    
    <Style TargetType="Button" Class="Calculator">
        <Setter Property="BackgroundColor" Value="{StaticResource Bronze}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Charcoal}, Dark={StaticResource Smoke}}" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HeightRequest" Value="75" />
    </Style>
    
    <Style TargetType="material:PickerField">
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Charcoal}, Dark={StaticResource Smoke}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Charcoal}, Dark={StaticResource Smoke}}" />
        <Setter Property="TitleColor" Value="{AppThemeBinding Light={StaticResource Charcoal}, Dark={StaticResource Smoke}}" />
        <Setter Property="AccentColor" Value="{StaticResource Bronze}" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="TitleFontSize" Value="15" />
    </Style>
    
    <Style TargetType="material:TextField">
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Charcoal}, Dark={StaticResource Smoke}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Charcoal}, Dark={StaticResource Smoke}}" />
        <Setter Property="AccentColor" Value="{StaticResource Bronze}" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="TitleFontSize" Value="15" />
    </Style>
</ResourceDictionary>
